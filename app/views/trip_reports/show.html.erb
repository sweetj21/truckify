<%- model_class = TripReport -%>


<div class="btn-group">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                trip_reports_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_trip_report_path(@trip_report), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                trip_report_path(@trip_report),
                :method => 'delete',
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger' %>
</div>

<div class="page-header">
  <h1>Trip Report</h1>
</div>



<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:driver_id) %>:</strong></dt>
  <dd><%= @trip_report.driver_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_start_date) %>:</strong></dt>
  <dd><%= @trip_report.trip_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_end_date) %>:</strong></dt>
  <dd><%= @trip_report.trip_end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_started_at) %>:</strong></dt>
  <dd><%= @trip_report.trip_started_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_ended_at) %>:</strong></dt>
  <dd><%= @trip_report.trip_ended_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:most_distant_city) %>:</strong></dt>
  <dd><%= @trip_report.most_distant_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:odometer_start) %>:</strong></dt>
  <dd><%= @trip_report.odometer_start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:odometer_end) %>:</strong></dt>
  <dd><%= @trip_report.odometer_end %></dd>
</dl>

<h2>Crossings</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:odometer_reading) %></th>
      <th><%= model_class.human_attribute_name(:routes_used) %></th>
      <th><%= model_class.human_attribute_name(:trip_report_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @crossings.each do |crossing| %>
      <tr>
        <td><%= link_to crossing.id, crossing_path(crossing) %></td>
        <td><%= crossing.state %></td>
        <td><%= crossing.odometer_reading %></td>
        <td><%= crossing.routes_used %></td>
        <td><%= crossing.trip_report_id %></td>
        <td><%=l crossing.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_crossing_path(crossing), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      crossing_path(crossing),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="#" class="btn btn-primary create_crossing_form">New</a>

<%= form_for @crossing, :html => { :class => 'form-horizontal', style: "display: none;" } do |f| %>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :odometer_reading, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :odometer_reading, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :routes_used, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :routes_used, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group hidden">
    <%= f.label :trip_report_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :trip_report_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <a href="#" class="btn close_crossing_form">Cancel</a>
  </div>
<% end %>

