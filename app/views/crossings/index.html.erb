<%- model_class = Crossing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:odometer_reading) %></th>
      <th><%= model_class.human_attribute_name(:routes_used) %></th>
      <th><%= model_class.human_attribute_name(:trip_report_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @crossings.each do |crossing| %>
      <tr>
        <td><%= link_to crossing.id, crossing_path(crossing) %></td>
        <td><%= crossing.state %></td>
        <td><%= crossing.odometer_reading %></td>
        <td><%= crossing.routes_used %></td>
        <td><%= crossing.trip_report_id %></td>
        <td><%=l crossing.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_crossing_path(crossing), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      crossing_path(crossing),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_crossing_path,
            :class => 'btn btn-primary' %>
