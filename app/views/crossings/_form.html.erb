<%= form_for @crossing, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :odometer_reading, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :odometer_reading, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :routes_used, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :routes_used, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group hidden">
    <%= f.label :trip_report_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :trip_report_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Delete", crossing_path(@crossing), method: :delete, class: "btn btn-danger", confirm: "Are you sure?" %>
    <%= link_to "Cancel", @crossing.trip_report, class: "btn" %>
  </div>
<% end %>
