<%- model_class = GasStop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:vendors_name) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:invoice_number) %></th>
      <th><%= model_class.human_attribute_name(:volume) %></th>
      <th><%= model_class.human_attribute_name(:metric) %></th>
      <th><%= model_class.human_attribute_name(:trip_report_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @gas_stops.each do |gas_stop| %>
      <tr>
        <td><%= link_to gas_stop.id, gas_stop_path(gas_stop) %></td>
        <td><%= gas_stop.state %></td>
        <td><%= gas_stop.date %></td>
        <td><%= gas_stop.vendors_name %></td>
        <td><%= gas_stop.location %></td>
        <td><%= gas_stop.invoice_number %></td>
        <td><%= gas_stop.volume %></td>
        <td><%= gas_stop.metric %></td>
        <td><%= gas_stop.trip_report_id %></td>
        <td><%=l gas_stop.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_gas_stop_path(gas_stop), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      gas_stop_path(gas_stop),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_gas_stop_path,
            :class => 'btn btn-primary' %>
