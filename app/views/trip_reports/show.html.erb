<%- model_class = TripReport -%>
<div class="page-header">
  <h1>Trip Report</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:driver_id) %>:</strong></dt>
  <dd><%= @trip_report.driver_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_start_date) %>:</strong></dt>
  <dd><%= @trip_report.trip_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_end_date) %>:</strong></dt>
  <dd><%= @trip_report.trip_end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_started_at) %>:</strong></dt>
  <dd><%= @trip_report.trip_started_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_ended_at) %>:</strong></dt>
  <dd><%= @trip_report.trip_ended_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:most_distant_city) %>:</strong></dt>
  <dd><%= @trip_report.most_distant_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:odometer_start) %>:</strong></dt>
  <dd><%= @trip_report.odometer_start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:odometer_end) %>:</strong></dt>
  <dd><%= @trip_report.odometer_end %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trip_reports_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_report_path(@trip_report), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_report_path(@trip_report),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
