<%- model_class = GasStop -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @gas_stop.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @gas_stop.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendors_name) %>:</strong></dt>
  <dd><%= @gas_stop.vendors_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @gas_stop.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_number) %>:</strong></dt>
  <dd><%= @gas_stop.invoice_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:volume) %>:</strong></dt>
  <dd><%= @gas_stop.volume %></dd>
  <dt><strong><%= model_class.human_attribute_name(:metric) %>:</strong></dt>
  <dd><%= @gas_stop.metric %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trip_report_id) %>:</strong></dt>
  <dd><%= @gas_stop.trip_report_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              gas_stops_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gas_stop_path(@gas_stop), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              gas_stop_path(@gas_stop),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
